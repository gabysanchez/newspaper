<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head'); %>
</head>

<body>
    <header>
        <%- include('./partials/nav'); %>
    </header>
    <main>
        <h2>NEWS</h2>
        <section>
            <ul>
                <% data.map((news)=>{ %>
                    <li>
                        <p>ID: <span>
                                <%=news._id %>
                            </span></p>
                        <p>TITLE: <span>
                                <%=news.title %>
                            </span>
                        </p>
                        <p>TEXT: <span>
                                <%=news.text %>
                            </span>
                        </p>
                        <div>
                            <p>REPORTERS:</p>
                            <ul>
                                <%news.reporter.map((reporter)=>{%>
                                    <li>
                                        <p>ID: <span>
                                                <%=reporter.id%>
                                            </span></p>
                                        <p>NAME: <span>
                                                <%=reporter.name%>
                                            </span></p>
                                    </li>
                                    <%}) %>
                            </ul>
                        </div>
                        <div>
                            <p>RESOURCES:</p>
                            <ul>
                                <%news.resource.map((resource)=>{%>
                                    <li>
                                        <p>ID: <span>
                                                <%=resource.id%>
                                            </span></p>
                                        <p>NAME: <span><a href="<%=resource.url%>">
                                                    <%=resource.url%>
                                                </a>

                                            </span></p>
                                    </li>
                                    <%}) %>
                            </ul>
                        </div>
                    </li>
                    <% }) %>
            </ul>
        </section>
    </main>
</body>

</html>